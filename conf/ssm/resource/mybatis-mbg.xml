<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="ssm/resource/db-config.properties"/>
    <context id="mysql" targetRuntime="MyBatis3">
        <commentGenerator type="util.MysqlCommentGenerator">
            <!--<property name="suppressAllComments" value="false"/>-->
            <!--&lt;!&ndash;生成的注释包含时间戳&ndash;&gt;-->
            <!--<property name="suppressDate" value="true"/>-->
        </commentGenerator>

        <jdbcConnection driverClass="${jdbc.driver}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}"
                        password="${jdbc.password}">
        </jdbcConnection>

        <!-- default Java type resolver will attempt to make JDBC DECIMAL and NUMERIC types easier to work with by
        substituting Integral types if possible. -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="ssm.java.bean" targetProject=".\src">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="ssm.java.dao" targetProject=".\conf">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="ssm.java.dao" targetProject=".\src">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="tbl_emp" domainObjectName="Employee"/>

        <table tableName="tbl_dept" domainObjectName="Department"/>

    </context>
</generatorConfiguration>